  <!-- Confetti pieces generated with JS (small colorful rectangles) -->
  <script>
    // create confetti pieces
    const colors = ['#ff4d6d','#ffd166','#06d6a0','#4cc9f0','#c77dff','#ff9f1c'];
    for(let i=0;i<28;i++){
      const d = document.createElement('div');
      d.className = 'confetti-piece';
      d.style.left = Math.random()*100 + 'vw';
      d.style.background = colors[Math.floor(Math.random()*colors.length)];
      const delay = Math.random()*4;
      const duration = 4 + Math.random()*5;
      d.style.animationDelay = delay + 's';
      d.style.animationDuration = duration + 's';
      d.style.transform = 'rotate(' + (Math.random()*360) + 'deg)';
      d.style.width = (8 + Math.random()*14) + 'px';
      d.style.height = (6 + Math.random()*12) + 'px';
      document.body.appendChild(d);
    }
  </script>

